generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  password  String
  role      Role     @default(ADMIN)
  createdAt DateTime @default(now())

  logs      Log[]
  schedules Schedule[]
}

model Customer {
  id        Int      @id @default(autoincrement())
  name      String
  email     String   @unique
  address   String
  active    Boolean  @default(true)
  createdAt DateTime @default(now())

  logs      Log[]
  schedules Schedule[]
}

model Schedule {
  id         Int            @id @default(autoincrement())
  date       DateTime
  room       String
  status     StatusSchedule
  customer   Customer       @relation(fields: [customerId], references: [id])
  customerId Int
  createdAt  DateTime       @default(now())
  user       User?          @relation(fields: [userId], references: [id])
  userId     Int?
}

model Log {
  id         Int       @id @default(autoincrement())
  action     String
  module     String
  user       User?     @relation(fields: [userId], references: [id])
  userId     Int?
  customer   Customer? @relation(fields: [customerId], references: [id])
  customerId Int?
  createdAt  DateTime  @default(now())
}

enum Role {
  ADMIN
  CUSTOMER
}

enum StatusSchedule {
  EM_ANALISE
  AGENDADO
  CANCELADO
}
